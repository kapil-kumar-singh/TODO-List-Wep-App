<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <script src="https://kit.fontawesome.com/36fd1c5a01.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/home.css">
</head>
<body>
    <h1 id = 'heading'>TODO App</h1>
    <form action="/add_task" method="post" id="create_form">
        <div id="discription_div">
            <label for="discription">DISCRIPTION</label>
            <input type="text" name="discription" id ="discription" placeholder="What do you need to do ?"required>
        </div>
        <div id='cat-date-container'>
            <div id="category-div" class="cat-date-style">
                <label for="category">CATEGORY</label>
                <br>
                <select name="category" id="category" required>
                    <option value="" disabled selected >Choose a category</option>
                    <option value="Personal">Personal</option>
                    <option value="Work">Work</option>
                    <option value="School">School</option>
                    <option value="Home">Home</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div id="due-date-div" class="cat-date-style">
                <label for="due-date">DUE DATE</label>
                <br>
                <input type="date" id ="due-date" name="date" required>
            </div>
        </div>
    </form>

    <div id="buttons">
        <button type="submit" form="create_form" id="add_button"><i class="fas fa-plus"></i> &nbsp; ADD TASK</button>
        <button type="submit" id="delete_button"><i class="fas fa-trash-alt"></i> &nbsp; DELETE TASK</button>
    </div>
    
    <ul>
        <% for(let i of Todoschema) { %>
            <li class="list">
                <div class="checkbox">
                    <form action="" method="get">
                        <input type="checkbox" name="id" id="">
                    </form>
                </div>
                <div class="discription-div">
                    <div class="discription">
                        <%= i.discription %> 
                    </div>
                    <div class="due-date">
                        <i class="far fa-calendar-alt"></i> &nbsp; <%= i.date %> 
                    </div>

                </div>
                <div class="category-div">
                    <div class="category">
                        <%= i.category %> 
                    </div>
                </div>
                
            </li>
        <% } %>
    </ul>

    <script src="js/home.js"></script>
</body>
</html>